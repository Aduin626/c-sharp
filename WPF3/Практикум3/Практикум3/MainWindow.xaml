<Window x:Class="Практикум3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практикум3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="5">
        <Label Target="{Binding ElementName=txtA}" Content="Выбор_X"/>
        <TextBox x:Name="txtA"/>
        <Label Target="{Binding ElementName=txtB}" Content="Выбор_Y"/>
        <TextBox x:Name="txtB"/>
        <Label HorizontalAlignment="Center" Margin="10" Content="Нажмите Нажмите кнопку alt + &quot;X&quot; или alt +
&quot;Y&quot;"/>
        <Button Content="Задание 2" Click="Button_Click"/>
    </StackPanel>
</Window>
